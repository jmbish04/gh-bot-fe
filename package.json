{
  "name": "gh-bot-fe",
  "version": "1.0.0",
  "description": "Frontend for Colby GitHub Bot API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler pages dev public --compatibility-date=2025-02-11",
    "build": "npm run build:react && npm run build:worker",
    "build:react": "vite build",
    "build:worker": "esbuild src/index.ts --bundle --format=esm --outfile=public/_worker.js",
    "deploy": "wrangler pages deploy public --project-name=gh-bot-fe",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.87.4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  }
}
